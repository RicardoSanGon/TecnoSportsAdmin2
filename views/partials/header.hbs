<!-- Header Moderno con Fondo Verde -->
<header class='bg-gradient-to-r from-primary-500 to-primary-700 shadow-lg border-b border-primary-300 sticky top-0 z-40'>
  <div class='max-w-7xl mx-auto px-4 sm:px-6 lg:px-8'>
    <div class='flex justify-between items-center h-16'>
      <!-- Logo y Título -->
      <div class='flex items-center'>
        <button id='sidebarToggle' class='md:hidden p-2 rounded-md text-white hover:text-primary-100 hover:bg-primary-600 focus:outline-none focus:ring-2 focus:ring-inset focus:ring-white transition-all duration-200'>
          <i class='fas fa-bars text-lg'></i>
        </button>
        <div class='flex items-center ml-4 md:ml-0'>
          <div class='flex-shrink-0'>
            <div class='w-8 h-8 bg-gradient-to-r from-primary-400 to-primary-600 rounded-lg flex items-center justify-center'>
              <span class='material-icons text-white text-sm'>sports_soccer</span>
            </div>
          </div>
          <div class='ml-3'>
            <h1 class='text-xl font-bold text-white'>TecnoSports</h1>
          </div>
        </div>
      </div>

      <!-- Navegación Desktop -->
      <nav class='hidden md:flex space-x-1'>
        <button onclick='navigateToPage("/admin/dashboard")' class='nav-link px-3 py-2 text-sm font-medium rounded-md transition-all duration-200 text-white hover:bg-primary-600 {{#if (eq currentPage 'dashboard')}}bg-primary-600{{/if}}'>
          <i class='fas fa-tachometer-alt mr-2'></i>Dashboard
        </button>
        <button onclick='navigateToPage("/admin/users")' class='nav-link px-3 py-2 text-sm font-medium rounded-md transition-all duration-200 text-white hover:bg-primary-600 {{#if (eq currentPage 'users')}}bg-primary-600{{/if}}'>
          <i class='fas fa-users mr-2'></i>Usuarios
        </button>
        <button onclick='navigateToPage("/admin/teams")' class='nav-link px-3 py-2 text-sm font-medium rounded-md transition-all duration-200 text-white hover:bg-primary-600 {{#if (eq currentPage 'teams')}}bg-primary-600{{/if}}'>
          <i class='fas fa-shield-alt mr-2'></i>Equipos
        </button>
        <button onclick='navigateToPage("/admin/pools")' class='nav-link px-3 py-2 text-sm font-medium rounded-md transition-all duration-200 text-white hover:bg-primary-600 {{#if (eq currentPage 'pools')}}bg-primary-600{{/if}}'>
          <i class='fas fa-trophy mr-2'></i>Quinelas
        </button>
        <button onclick='navigateToPage("/admin/matches")' class='nav-link px-3 py-2 text-sm font-medium rounded-md transition-all duration-200 text-white hover:bg-primary-600 {{#if (eq currentPage 'matches')}}bg-primary-600{{/if}}'>
          <i class='fas fa-calendar-alt mr-2'></i>Partidos
        </button>
        <button onclick='navigateToPage("/admin/predictions")' class='nav-link px-3 py-2 text-sm font-medium rounded-md transition-all duration-200 text-white hover:bg-primary-600 {{#if (eq currentPage 'predictions')}}bg-primary-600{{/if}}'>
          <i class='fas fa-brain mr-2'></i>Predicciones
        </button>
        <button onclick='navigateToPage("/admin/confederations")' class='nav-link px-3 py-2 text-sm font-medium rounded-md transition-all duration-200 text-white hover:bg-primary-600 {{#if (eq currentPage 'confederations')}}bg-primary-600{{/if}}'>
          <i class='fas fa-brain mr-2'></i>Confederación
        </button>
      </nav>

      <!-- Usuario y Menú -->
      <div class='flex items-center space-x-4'>

        <!-- Usuario -->
        <div class='relative'>
          <button id='userMenuBtn' class='flex items-center space-x-2 p-2 rounded-lg hover:bg-gray-100 transition-colors duration-200'>
            <div class='w-8 h-8 bg-gradient-to-r from-primary-700 to-form-primary-500 rounded-full flex items-center justify-center'>
              <span class='material-icons text-white text-sm'>person</span>
            </div>
            <span class='hidden sm:block text-sm font-medium text-gray-700' id='userNameDisplay'>Cargando...</span>
            <span class='material-icons text-gray-500 text-sm'>expand_more</span>
          </button>

          <!-- Dropdown Menu -->
          <div id='userMenu' class='absolute right-0 mt-2 w-48 bg-white rounded-lg shadow-lg border border-gray-200 py-1 hidden z-50'>
            <a href='#' class='block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100'>
              <i class='fas fa-user mr-2'></i>Mi Perfil
            </a>
            <div class='border-t border-gray-200'></div>
            <button onclick='logout()' class='w-full text-left block px-4 py-2 text-sm text-red-600 hover:bg-red-50'>
              <i class='fas fa-sign-out-alt mr-2'></i>Cerrar Sesión
            </button>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Sidebar Mobile -->
  <div id='sidebar' class='fixed inset-y-0 left-0 z-50 w-64 bg-gradient-to-r from-primary-500 to-primary-700 shadow-lg transform -translate-x-full md:hidden transition-transform duration-300 ease-in-out'>
    <div class='flex flex-col h-full'>
      <!-- Header Sidebar -->
      <div class='flex items-center justify-between p-4 border-b border-primary-300'>
        <div class='flex items-center'>
          <div class='w-8 h-8 bg-gradient-to-r from-primary-400 to-primary-600 rounded-lg flex items-center justify-center'>
            <span class='material-icons text-white text-sm'>sports_soccer</span>
          </div>
          <span class='ml-2 text-lg font-bold text-white'>TecnoSports</span>
        </div>
        <button id='closeSidebar' class='p-2 rounded-md text-white hover:text-primary-100 hover:bg-primary-600'>
          <span class='material-icons'>close</span>
        </button>
      </div>

      <!-- Navigation -->
      <nav class='flex-1 px-4 py-6 space-y-2'>
        <button onclick='navigateToPage("/admin/dashboard")' class='nav-link flex items-center px-4 py-3 text-sm font-medium rounded-lg text-white hover:bg-primary-600 {{#if (eq currentPage 'dashboard')}}active{{/if}}'>
          <i class='fas fa-tachometer-alt mr-3'></i>Dashboard
        </button>
        <button onclick='navigateToPage("/admin/users")' class='nav-link flex items-center px-4 py-3 text-sm font-medium rounded-lg text-white hover:bg-primary-600 {{#if (eq currentPage 'users')}}active{{/if}}'>
          <i class='fas fa-users mr-3'></i>Usuarios
        </button>
        <button onclick='navigateToPage("/admin/teams")' class='nav-link flex items-center px-4 py-3 text-sm font-medium rounded-lg text-white hover:bg-primary-600 {{#if (eq currentPage 'teams')}}active{{/if}}'>
          <i class='fas fa-shield-alt mr-3'></i>Equipos
        </button>
        <button onclick='navigateToPage("/admin/pools")' class='nav-link flex items-center px-4 py-3 text-sm font-medium rounded-lg text-white hover:bg-primary-600 {{#if (eq currentPage 'pools')}}active{{/if}}'>
          <i class='fas fa-trophy mr-3'></i>Quinelas
        </button>
        <button onclick='navigateToPage("/admin/matches")' class='nav-link flex items-center px-4 py-3 text-sm font-medium rounded-lg text-white hover:bg-primary-600 {{#if (eq currentPage 'matches')}}active{{/if}}'>
          <i class='fas fa-calendar-alt mr-3'></i>Partidos
        </button>
        <button onclick='navigateToPage("/admin/predictions")' class='nav-link flex items-center px-4 py-3 text-sm font-medium rounded-lg text-white hover:bg-primary-600 {{#if (eq currentPage 'predictions')}}active{{/if}}'>
          <i class='fas fa-brain mr-3'></i>Predicciones
        </button>
        <button onclick='navigateToPage("/admin/confederations")' class='nav-link flex items-center px-4 py-3 text-sm font-medium rounded-lg text-white hover:bg-primary-600 {{#if (eq currentPage 'confederations')}}active{{/if}}'>
          <i class='fas fa-brain mr-3'></i>Confederación
        </button>
      </nav>

      <!-- Footer Sidebar -->
      <div class='p-4 border-t border-gray-200'>
        <div class='flex items-center'>
          <div class='w-8 h-8 bg-gradient-to-r from-green-500 to-blue-500 rounded-full flex items-center justify-center'>
            <span class='material-icons text-white text-sm'>check_circle</span>
          </div>
          <div class='ml-3'>
            <p class='text-sm font-medium text-white'>Sistema Activo</p>
            <p class='text-xs text-gray-300'>v1.0.0</p>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Overlay -->
  <div id='sidebarOverlay' class='fixed inset-0 bg-black bg-opacity-50 z-40 hidden md:hidden'></div>
</header>